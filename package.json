{
  "name": "starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist && npm run copy:graphql",
    "start": "node dist/server.js",
    "test": "jest --setupFiles dotenv/config --verbose ./src",
    "start:docker": "npm run build && node --inspect=0.0.0.0 dist/server.js",
    "rebuild:be": "docker compose build backend && docker compose rm --stop backend && docker compose up -d backend",
    "db:console": "docker compose exec postgres psql -h localhost -U postgres -d funica_db_dev",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:docker": "docker compose run backend npm run db:migrate",
    "db:seed": "node dist/prisma/seed.js",
    "db:seed:docker": "docker compose exec backend node dist/prisma/seed/seed.js",
    "copy:graphql": "copyfiles -u 2 src/graphql/**/*.graphql dist/graphql",
    "graphql:codegen": "graphql-codegen"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.3.2",
    "@prisma/client": "^4.9.0",
    "@tsconfig/node18": "^1.0.1",
    "bcrypt": "^5.1.0",
    "cookie": "^0.5.0",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.20.1",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "ts-jest-resolver": "^2.0.0",
    "typescript": "^4.9.5",
    "uuidv4": "^6.2.13",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.0.0",
    "@graphql-codegen/typescript": "^3.0.0",
    "@graphql-codegen/typescript-resolvers": "^3.0.0",
    "@swc/cli": "^0.1.61",
    "@swc/core": "^1.3.32",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie": "^0.5.1",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/validator": "^13.7.12",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.33.0",
    "jest": "^29.4.3",
    "jest-mock-extended": "^3.0.2",
    "prisma": "^4.9.0",
    "rimraf": "^4.1.2",
    "rsync": "^0.6.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1"
  },
  "volta": {
    "node": "18.14.0"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
